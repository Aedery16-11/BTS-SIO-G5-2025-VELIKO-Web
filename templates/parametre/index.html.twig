{% extends 'base.html.twig' %}

{% block title %}Paramètres{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <h3>Liste des paramètres</h3>
                <ul class="list-group" id="parametre-list">
                    {% for parametre in parametres %}
                        <li class="list-group-item">
                            <a href="{{ path('app_parametre', { action: parametre.id == 1 ? 'changer-attribut' : '' }) }}" style="text-decoration: none; color: inherit;">
                                {{ parametre.name }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="col-md-8" id="parametre-details">
                {% if form is not null %}
                    <h3>Changer d'Attribut</h3>
                    <div id="form-container">
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        {{ form_end(form) }}
                    </div>
                {% else %}
                    <h3>Détails</h3>
                    <p>Sélectionnez un paramètre pour afficher ses détails.</p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}