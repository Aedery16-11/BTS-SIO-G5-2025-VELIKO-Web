{% block title %}Chargement...{% endblock %}

{% block stylesheets %}
    <style>
        /* Style pour l'écran de chargement */
        #loading-screen {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: #66ee78;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            z-index: 9999;
        }

        /* Style pour le texte de chargement */
        #loading-text {
            color: #000000;
            margin-top: 10px;
            font-size: 18px;
            font-weight: bold;
            display: flex;
            align-items: center;
        }

        /* Style pour les points de chargement */
        .dot {
            height: 10px;
            width: 10px;
            margin: 0 5px;
            background-color: #000000;
            border-radius: 50%;
            animation: dot-flashing 1s infinite linear alternate;
        }

        /* Délai d'animation pour le deuxième point */
        .dot:nth-child(2) {
            animation-delay: 0.2s;
        }

        /* Délai d'animation pour le troisième point */
        .dot:nth-child(3) {
            animation-delay: 0.4s;
        }

        /* Animation pour les points de chargement */
        @keyframes dot-flashing {
            0% {
                opacity: 0.1;
            }
            50% {
                opacity: 1;
            }
            100% {
                opacity: 0.1;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div id="loading-screen">
        <!-- Script pour l'icône de chargement -->
        <script src="https://cdn.lordicon.com/lordicon.js"></script>
        <lord-icon
                src="https://cdn.lordicon.com/znhrmptg.json"
                trigger="loop"
                stroke="bold"
                state="loop-cycle"
                style="width:250px;height:250px">
        </lord-icon>
        <div id="loading-text">
            <h3>Chargement</h3>
            <!-- Points de chargement animés -->
            <div class="dot"></div>
            <div class="dot"></div>
            <div class="dot"></div>
        </div>
    </div>

    <!-- Script pour rediriger après un délai -->
    <script src="https://cdn.lordicon.com/lordicon.js"></script>
    <script>
        setTimeout(function () {
            window.location.href = "{{ path('app_home') }}";
        }, 1000); // Redirection après 1 seconde
    </script>
{% endblock %}